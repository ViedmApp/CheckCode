<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanActivity">


    <Switch
        android:id="@+id/switch_light"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/voice_alerts"
        android:layout_marginBottom="17dp"
        android:checked="false"
        android:elevation="1dp"
        android:onClick="onclick"
        tools:checked="false" />


    <ImageButton
        android:id="@+id/voice_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="false"
        android:background="@color/transparent"
        android:contentDescription="@string/voiceAlert_text"
        android:cropToPadding="false"
        android:elevation="1dp"
        android:onClick="toggleVoiceAlerts"
        android:tint="@color/button_on"
        app:srcCompat="@drawable/ic_sharp_volume_up_24px" />


    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <ImageView
        android:id="@+id/linterna"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/switch_light"
        android:layout_marginBottom="44dp"
        android:contentDescription="@string/flashlight_text"
        android:elevation="1dp"
        android:rotation="90"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_highlight_black_24dp" />

</RelativeLayout>