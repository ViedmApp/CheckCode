<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/test_mode_button"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/base"
        android:onClick="testMode"
        android:text="@string/test_mode"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/real_mode_button" />

    <Button
        android:id="@+id/real_mode_button"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/base"
        android:onClick="realMode"
        android:text="@string/real_mode"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/test_mode_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>